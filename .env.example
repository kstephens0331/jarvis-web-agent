# Jarvis Web Agent Configuration
# Copy to .env and fill in values

# =============================================================================
# CORE SERVICES
# =============================================================================

# Redis connection (usually leave as-is for Docker setup)
REDIS_URL=redis://redis:6379

# FlareSolverr for Cloudflare bypass
FLARESOLVERR_URL=http://flaresolverr:8191

# =============================================================================
# PROXY CONFIGURATION
# =============================================================================

# Enable home residential proxy exit
HOME_PROXY_ENABLED=true

# WireGuard tunnel SOCKS5 proxy (set after WireGuard setup)
# Format: socks5://ip:port
HOME_PROXY_URL=socks5://10.10.10.1:1080

# SACVPN nodes for rotation/geo (comma-separated)
# Format: host:port,host:port
SACVPN_NODES=

# =============================================================================
# BROWSER SETTINGS
# =============================================================================

# Maximum concurrent browser instances (based on RAM: ~1.5GB each)
MAX_CONCURRENT_BROWSERS=3

# Default page load timeout in milliseconds
BROWSER_TIMEOUT=30000

# Run headless (true for production, false for debugging)
HEADLESS=true

# =============================================================================
# SECURITY
# =============================================================================

# API key for authenticating requests from Jarvis Core
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
API_KEY=CHANGE_ME_GENERATE_SECURE_KEY

# =============================================================================
# LOGGING
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# =============================================================================
# CAPTCHA (Optional)
# =============================================================================

# Path to Whisper model for audio CAPTCHA (auto-downloads if not present)
WHISPER_MODEL=base

# =============================================================================
# JARVIS CORE CONNECTION (if external)
# =============================================================================

# Jarvis Core callback URL for async job results
# JARVIS_CORE_URL=http://jarvis-core:8000/webhook/web-agent
